<Window x:Class="UllnnovationHub.Samples.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:prism="http://prismlibrary.com/" prism:ViewModelLocator.AutoWireViewModel="True"
        xmlns:attached="clr-namespace:UllnnovationHub.ToolKIt.Themes.Attached;assembly=UllnnovationHub.ToolKIt"
        Title="{Binding Title}" Height="800" Width="1000" >
    <Grid>
        <TabControl>
            <TabItem Header="按钮">
                <ScrollViewer HorizontalScrollBarVisibility="Auto">
                    <UniformGrid>
                        <StackPanel Orientation="Vertical" Grid.Row="0" Grid.Column="0">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                                <Button Margin="10" Content="Main Button" Style="{StaticResource BaseButtonStyle}" />
                                <Button Margin="10" Background="#F76E52" Content="Error Button" Style="{StaticResource BaseButtonStyle}" />
                                <Button Margin="10" attached:Corner.Value="10" Background="{StaticResource GreenColor}" Content="Info Button" Style="{StaticResource BaseButtonStyle}" />
                                <Button Margin="10" attached:Corner.Value="5" Background="{StaticResource YellowColor}" Content="Warn Button" Style="{StaticResource BaseButtonStyle}" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                                <Button IsEnabled="False" Margin="10" Content="Main Button" Style="{StaticResource BaseButtonStyle}" />
                                <Button IsEnabled="False" Margin="10" Background="#F76E52" Content="Error Button" Style="{StaticResource BaseButtonStyle}" />
                                <Button IsEnabled="False" Margin="10" attached:Corner.Value="10" Background="{StaticResource GreenColor}" Content="Info Button" Style="{StaticResource BaseButtonStyle}" />
                                <Button IsEnabled="False" Margin="10" attached:Corner.Value="5" Background="{StaticResource YellowColor}" Content="Warn Button" Style="{StaticResource BaseButtonStyle}" />
                            </StackPanel>
                        </StackPanel>
                    </UniformGrid>
                   

                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
